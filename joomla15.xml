<description>A sample component embedding Plotalot in the front end. To see SimplePlot in action, create a menu item of type SimplePlot, go to your site front end, and click on the new menu item.</description>

<files folder="site">
	<filename>simpleplot.php</filename>
	<folder>views</folder>
</files>

<install>
	<sql>
		<file charset="utf8" driver="mysql">install.sql</file>
	</sql>
</install>

<administration>
	<menu img="../administrator/components/com_plotalot/assets/plotalot-16.png">SimplePlot</menu>
	
	<files folder="admin">
		<filename>simpleplot.php</filename>
		<filename>install.sql</filename>
		<folder>helpers</folder>
	</files>
</administration>

</install>
